.block11
  width 100%
  height auto

  .block11-content
    width 100%
    height auto
    justify-content center
    align-items center
    flex-direction column
    padding-top 103px
    padding-bottom 100px
    box-sizing border-box

    h2
      margin-bottom 12px

    p
      color #232323
      font-family LatoWebLight
      font-size 16px
      font-weight 300
      margin-bottom 32px
      @media (min-width t-screen)
        font-size 18px
      @media (min-width d-screen)
        font-size 20px

    a
      width 230px
      height 58px
      border-radius 3px
      background-color #0095ff
      color #ffffff
      font-family LatoWebMedium
      font-size 12px
      font-weight 700
      letter-spacing 1px
      text-transform uppercase
      padding-top 22px 35px
      box-sizing border-box
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      &:hover
        box-shadow: 3px 11px 14px -10px rgba(0,0,0,0.49);

#regist
  display none

  .reg-popup
    width 100%
    height 300px

    h2
      margin-bottom 20px

    form
      width 100%
      height auto
      display flex
      display -webkit-flex
      justify-content center
      align-items center
      flex-direction column

      input
        width 230px
        height 40px
        color #232323
        font-family LatoWebMedium
        font-size 16px
        font-weight 300
        text-align center
        margin-bottom 20px
        border-radius 3px
        border 1px solid #0095ff

      button
        width 230px
        height 48px
        border-radius 3px
        background-color #0095ff
        color #ffffff
        border none
        font-family LatoWebMedium
        font-size 12px
        font-weight 700
        letter-spacing 1px
        text-transform uppercase
        padding-top 12px 35px
        box-sizing border-box
        display flex
        display -webkit-flex
        justify-content center
        align-items center
