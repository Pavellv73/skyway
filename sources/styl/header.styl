header
  width 100%
  height auto
  position fixed
  top 0
  z-index 999
  background-color #013B7D

  .header-content
    width 100%
    height auto
    justify-content space-between
    align-items center
    flex-direction row
    box-sizing border-box
    padding-top 16px
    padding-bottom 16px

    .logo-block
      width 96px
      height 19px
      @media (min-width: t-screen)
        width 130px
        height 26px

      img
        width 100%

    .menu
      display none
      position absolute
      top 51px
      left 0
      width 100%
      height 100vh
      background #013B7D
      box-sizing border-box
      padding-top 96px
      @media (min-width: d-screen)
        display block
        position relative
        width auto
        height auto
        padding-top 0
        top 0
        left 70px



      nav
        width 100%
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction column
        @media (min-width: d-screen)
          flex-direction row

        a
          display block
          color rgba(255,255,255,0.8)
          font-family LatoWebLight
          font-size 14px
          font-weight 500
          line-height 17px
          text-align center
          margin-bottom 48px
          margin-left 0
          &:hover
            color #FFFFFF
          @media (min-width: h-screen)
            font-size 16px
            line-height 19px
            font-weight 700
          @media (min-width d-screen)
            margin-right 30px
            margin-bottom 0
            font-weight 500
            font-size 14px
            line-height 15px




    a
      display none
      font-size 16px
      font-weight bold
      line-height 19px
      text-align right
      @media (min-width: t-screen)
        display block
        margin-left 29%


    .laung-block
      width 62px
      height 17px
      margin-left 65px
      @media (min-width: t-screen)
        margin-left 0


      a
        width 100%
        display flex
        display -webkit-flex
        justify-content space-between
        align-items center
        flex-direction row
        &:hover
          p
            color #ffffff


        img
          height 15px
          width 22px

        p
          transition all 0.2s ease
          color rgba(255,255,255,0.8)
          font-family LatoWebBold
          font-size 14px
          font-weight bold
          line-height 17px
          text-align center



    .menu-hamburger
      position relative
      @media (min-width d-screen)
        display none

      .block-menu
        width auto
        height auto
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row


        .burger
          width 24px
          height 24px
          cursor pointer
          display flex
          display -webkit-flex
          justify-content center
          align-items flex-end
          flex-direction column


          .line1, .line3
            width 18px
            height 2px
            background-color #FFFFFF
            transition all 0.5s

          .line2
            width 18px
            height 2px
            background-color #FFFFFF
            margin 5px 0
            transition all 0.5s

          .block1-click
            transform rotate(45deg)
            transition all 0.5s
            position absolute
            top 11px
          .block2-click
            display none
            overflow hidden
            transition all 0.5s
          .block3-click
            transform rotate(-45deg)
            transition all 0.5s

