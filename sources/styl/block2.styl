.block2
  width 100%
  height auto
  background-color #527193

  .block2-content
    width 100%
    height auto
    padding-top 41px
    padding-bottom 60px
    box-sizing border-box
    justify-content center
    align-items center
    flex-direction column
    @media (min-width t-screen)
      padding-top 56px


    .block2-head
      width 100%
      height auto
      margin-bottom 40px
      @media (min-width t-screen)
        margin-bottom 45px


      h2
        color #ffffff
        line-height 30px

    .video-info
      width 100%
      height auto
      @media (min-width d-screen)
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row

      .video
        margin-bottom 30px
        width 100%
        height auto
        @media (min-width t-screen)
          margin-bottom 45px
          display flex
          display -webkit-flex
          justify-content center
          align-items center
        @media (min-width d-screen)
          margin-left -48px

        iframe
          width 100%
          height 200px
          @media (min-width t-screen)
            height 500px
            width 90%
          @media (min-width d-screen)
            width 100%
            height 370px

      .text-video
        width 100%
        height auto

        p
          color #FFFFFF
          font-family LatoWebLight
          font-size 14px
          font-style italic
          line-height 17px
          text-align left
          margin-left 25px
          position relative
          margin-bottom 16px
          @media (min-width t-screen)
            font-size 16px
            line-height 19px
            margin-left 60px
          &:before
            content "â€¢"
            width 2px
            height 2px
            position absolute
            top 0
            left -18px
            @media (min-width t-screen)
              width 3px
              height 3px



