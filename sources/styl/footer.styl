footer
  width 100%
  height auto
  background-color #033064

  .footer-content
    width 100%
    height auto
    padding 15px 0
    display flex
    display -webkit-flex
    justify-content center
    align-items center
    flex-direction column
    @media (min-width t-screen)
      flex-direction row
      justify-content space-between
      padding-top 15px
      padding-bottom 15px

    .politic
      color rgba(255, 255, 255, 0.8)
      font-family "myriad-set-pro"
      font-size 12px

    .icon-soc
      display none
      @media (min-width t-screen)
        display flex
        display -webkit-flex
        justify-content center
        align-items center
        flex-direction row

        a
          margin-left 17px
          margin-right 17px

    .contact
      display none
      @media (min-width t-screen)
        display block

        a
          color #ffffff
          font-family "myriad-set-pro"
          font-size 14px
          font-weight 500
          margin 0 8px






#politic
    display:none

  h2
    text-align center
    margin-bottom 20px

  p
    text-align center
    color #0c0b10
    font-family "myriad-set-pro"


