.block1
  width 100%
  height auto
  background-image url("img/block1-bg.png")
  background-size cover
  background-position 77% 50%
  background-repeat no-repeat
  z-index 0
  background-color rgba(82, 113, 147, 0.6)
  position relative
  @media (min-width t-screen)
    background-position 100% -13%
    background-size 148%
  @media (min-width d-screen)
    background-size 100%
    background-position 100% 0

  .block1-bg
    width 100%
    height 497px
    background linear-gradient(255.3deg, rgba(82, 113, 147, 0) 0%, #527193 100%), linear-gradient(180deg, rgba(82, 113, 147, 0) 0%, #527193 100%)
    z-index -1
    position absolute
    top 0
    left 0
    @media (min-width t-screen)
      height 644px
      background linear-gradient(255.3deg, rgba(82, 113, 147, 0) 0%, #527193 100%), linear-gradient(180deg, rgba(82, 113, 147, 0) 0%, #527193 241%)
    @media (min-width d-screen)
      height 668px
      background: linear-gradient(255.3deg, rgba(82,113,147,0) 0%, #527193 100%), linear-gradient(180deg, rgba(82,113,147,0) 0%, #527193 97%)


  .block1-content
    width 100%
    height auto
    justify-content center
    align-items flex-start
    flex-direction column
    z-index 2
    padding-top 82px
    padding-bottom 41px
    box-sizing border-box
    @media (min-width t-screen)
      padding-top 92px
      padding-bottom 56px
    @media (min-width d-screen)
      padding-bottom 80px

    .block1-head
      width 100%
      height auto
      margin-bottom 26px

      h1
        margin-bottom 4px
        @media (min-width t-screen)
          line-height 56px

      h3
        color #ffffff

    .block1-info
      width 100%
      height auto
      margin-bottom 48px

      p
        color #FFFFFF
        font-family LatoWebLight
        font-size 14px
        font-weight bold
        line-height 17px
        text-align left
        margin-bottom 16px
        @media (min-width t-screen)
          font-size 16px
          line-height 18px
          margin-bottom 8px

      span
        display none
        @media (min-width t-screen)
          display block
          color #DAE1EA
          font-family LatoWebLight
          font-size 14px
          font-style italic
          line-height 17px
          margin-bottom 16px
          max-width 350px
